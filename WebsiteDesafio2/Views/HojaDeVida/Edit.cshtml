@model WebsiteDesafio2.Models.HojaDeVidaDto

@{
    ViewData["Title"] = "Editar Hoja de Vida";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <h4>Editar Hoja de Vida</h4>
        <hr />
        <div class="row">
            <div>
                <form asp-action="EditarHoja" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <!-- Nombre Completo -->
                    <div class="form-group">
                        <label asp-for="nombreCompleto" class="control-label"></label>
                        <input asp-for="nombreCompleto" class="form-control" />
                        <span asp-validation-for="nombreCompleto" class="text-danger"></span>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <div class="form-group">
                        <label asp-for="fechaNacimiento" class="control-label"></label>
                        <input asp-for="fechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                    </div>

                    <!-- Formación Académica -->
                    <h5>Formación Académica</h5>
                    <div id="formacion-academica-container">
                        @if (!Model.FormacionesAcademicas.Any())
                        {
                            <p>No hay formaciones académicas registradas.</p>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.FormacionesAcademicas.Count; i++)
                            {
                                <div class="formacion-academica">
                                    <div class="form-group">
                                        <label asp-for="FormacionesAcademicas[i].TituloObtenido" class="control-label"></label>
                                        <input asp-for="FormacionesAcademicas[i].TituloObtenido" class="form-control" />
                                        <span asp-validation-for="FormacionesAcademicas[i].TituloObtenido" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FormacionesAcademicas[i].Institucion" class="control-label"></label>
                                        <input asp-for="FormacionesAcademicas[i].Institucion" class="form-control" />
                                        <span asp-validation-for="FormacionesAcademicas[i].Institucion" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FormacionesAcademicas[i].FechaInicio" class="control-label"></label>
                                        <input asp-for="FormacionesAcademicas[i].FechaInicio" type="date" class="form-control" />
                                        <span asp-validation-for="FormacionesAcademicas[i].FechaInicio" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FormacionesAcademicas[i].FechaFin" class="control-label"></label>
                                        <input asp-for="FormacionesAcademicas[i].FechaFin" type="date" class="form-control" />
                                        <span asp-validation-for="FormacionesAcademicas[i].FechaFin" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Experiencia Profesional -->
                    <h5>Experiencia Profesional</h5>
                    <div id="experiencia-profesional-container">
                        @if (!Model.ExperienciasProfesionales.Any())
                        {
                            <p>No hay experiencias profesionales registradas.</p>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.ExperienciasProfesionales.Count; i++)
                            {
                                <div class="experiencia-profesional">
                                    <div class="form-group">
                                        <label asp-for="ExperienciasProfesionales[i].Empresa" class="control-label"></label>
                                        <input asp-for="ExperienciasProfesionales[i].Empresa" class="form-control" />
                                        <span asp-validation-for="ExperienciasProfesionales[i].Empresa" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExperienciasProfesionales[i].Cargo" class="control-label"></label>
                                        <input asp-for="ExperienciasProfesionales[i].Cargo" class="form-control" />
                                        <span asp-validation-for="ExperienciasProfesionales[i].Cargo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExperienciasProfesionales[i].FechaInicio" class="control-label"></label>
                                        <input asp-for="ExperienciasProfesionales[i].FechaInicio" type="date" class="form-control" />
                                        <span asp-validation-for="ExperienciasProfesionales[i].FechaInicio" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExperienciasProfesionales[i].FechaFin" class="control-label"></label>
                                        <input asp-for="ExperienciasProfesionales[i].FechaFin" type="date" class="form-control" />
                                        <span asp-validation-for="ExperienciasProfesionales[i].FechaFin" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExperienciasProfesionales[i].descripcion" class="control-label"></label>
                                        <textarea asp-for="ExperienciasProfesionales[i].descripcion" class="form-control"></textarea>
                                        <span asp-validation-for="ExperienciasProfesionales[i].descripcion" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Referencias Personales -->
                    <h5>Referencias Personales</h5>
                    <div id="referencia-personal-container">
                        @if (!Model.ReferenciasPersonales.Any())
                        {
                            <p>No hay referencias personales registradas.</p>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.ReferenciasPersonales.Count; i++)
                            {
                                <div class="referencia-personal">
                                    <div class="form-group">
                                        <label asp-for="ReferenciasPersonales[i].Nombre" class="control-label"></label>
                                        <input asp-for="ReferenciasPersonales[i].Nombre" class="form-control" />
                                        <span asp-validation-for="ReferenciasPersonales[i].Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ReferenciasPersonales[i].Telefono" class="control-label"></label>
                                        <input asp-for="ReferenciasPersonales[i].Telefono" class="form-control" />
                                        <span asp-validation-for="ReferenciasPersonales[i].Telefono" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ReferenciasPersonales[i].Relacion" class="control-label"></label>
                                        <input asp-for="ReferenciasPersonales[i].Relacion" class="form-control" />
                                        <span asp-validation-for="ReferenciasPersonales[i].Relacion" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Idiomas -->
                    <h5>Idiomas</h5>
                    <div id="idioma-container">
                        @if (!Model.Idiomas.Any())
                        {
                            <p>No hay idiomas registrados.</p>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.Idiomas.Count; i++)
                            {
                                <div class="idioma">
                                    <div class="form-group">
                                        <label asp-for="Idiomas[i].NombreIdioma" class="control-label"></label>
                                        <input asp-for="Idiomas[i].NombreIdioma" class="form-control" />
                                        <span asp-validation-for="Idiomas[i].NombreIdioma" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Idiomas[i].Nivel" class="control-label"></label>
                                        <input asp-for="Idiomas[i].Nivel" class="form-control" />
                                        <span asp-validation-for="Idiomas[i].Nivel" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <br /> <br />
                    <!-- Submit -->
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div>
            <a asp-action="Index">Volver a la lista</a>
        </div>

        @section Scripts {
            <script>
                // Tu código JavaScript para agregar nuevas secciones va aquí
            </script>
        }
    </div>
</div>