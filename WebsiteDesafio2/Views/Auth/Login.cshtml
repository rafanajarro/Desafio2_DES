@using WebsiteDesafio2.Models
@model LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="NombreUsuario" class="form-label"></label>
                            <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de usuario" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3 text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Ingresar</button>
                        </div>

                        <!--
                            <div class="text-center mt-3">
                            <a asp-action="ForgotPassword" class="text-secondary">¿Olvidaste tu contraseña?</a>
                        </div>
                        -->
                        <div class="text-center mt-2">
                            <a asp-action="Register" class="text-secondary">Crear cuenta</a>
                        </div>
                    </form>
                </div>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @ViewBag.Error
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3 text-center">
                    @TempData["Message"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @TempData["Error"]
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
